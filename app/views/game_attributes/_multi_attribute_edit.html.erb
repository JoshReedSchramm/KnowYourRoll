<%= form_for [game, @parent, attribute.becomes(GameAttribute)], :remote => true do |f| %>
	<%- f.object = attribute.becomes(attribute.class) %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
<% end %>
<% if attribute.children.any? %>
  <ul>
    <% attribute.children.each do |a| %>
      <%= render partial: "#{a.type.underscore}_edit", locals: { game: game, attribute: a } %>
    <% end %>
  </ul>
<% end %>