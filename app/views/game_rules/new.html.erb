<div class="container main_content">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= form_for [@game, @game_rule] do |f| %>
        <%= render partial: "/shared/errors", locals: { model: @game_rule } %>
        <div class="form-group">
          <%= f.label :name, "Name of Game Rule Collection" %>
          <%= f.text_field :name, :value => "Character Sheet Rules", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description of Game Rule Collection" %>
          <%= f.text_area :description, :value => "Rules that trigger when character attributes are inserted/updated", class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-primary btn-lg"  %>
        <%= link_to "Cancel", root_path, class: "btn btn-link btn-lg" %>
      <% end %>
    </div>
  </div>
</div>