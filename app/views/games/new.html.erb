<div class="container">
  <div class="row">
    <div class="xs-col-12">
      <%= form_for @game do |f| %>
        <%= render partial: "/shared/errors", locals: { model: @game } %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <%= f.submit class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
