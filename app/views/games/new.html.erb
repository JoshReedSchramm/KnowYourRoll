<div class="container main_content">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= form_for @game do |f| %>
        <%= render partial: "/shared/errors", locals: { model: @game } %>
        <div class="form-group">
          <%= f.label :name, "Name of Game" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description of Game" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <% if !current_user %>
          <%= f.fields_for :creator do |c| %>
            <div class="form-group">
              <%= c.label :name, "What is your name?" %>
              <%= c.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= c.label :email, "What is your email address?" %>
              <%= c.email_field :email, class: "form-control" %>
              <span class='help-text'>Already a member of Know Your Roll? <%= link_to "Sign In", new_user_session_path %></span>
            </div>
          <% end %>
        <% end %>
        <%= f.submit class: "btn btn-primary btn-lg"  %>
        <%= link_to "Cancel", root_path, class: "btn btn-link btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
