<div class="container main_content">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= form_for @game do |f| %>
        <%= render partial: "/shared/errors", locals: { model: @game } %>
        <div class="form-group">
          <%= f.label :name, "Name of Game" %>
          <%= f.text_field :name, :value => 'test game', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description of Game" %>
          <%= f.text_area :description, :value => 'test game description', class: "form-control" %>
        </div>
        <%= f.fields_for :creator do |c| %>
          <div class="form-group">
            <%= c.label :name, "What is your name?" %>
            <%= c.text_field :name, :value => 'joe doe', class: "form-control" %>
          </div>
          <div class="form-group">
            <%= c.label :email, "What is your email address?" %>
            <%= c.email_field :email, :value => 'jburkle19@gmail.com', class: "form-control" %>
          </div>
        <% end %>
        <%= f.submit class: "btn btn-primary btn-lg"  %> <%= link_to "Cancel", root_path, class: "btn btn-link btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
