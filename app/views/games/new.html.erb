<div class="container">
  <div class="row">
    <div class="xs-col-12">
      <%= form_for @game do |f| %>
        <%= render partial: "/shared/errors", locals: { model: @game } %>
        <div class="form-group">
          <%= f.label :name, "Name of Game" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description of Game" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <%= f.fields_for :creator do |c| %>
          <div class="form-group">
            <%= c.label :name, "What is your name?" %>
            <%= c.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= c.label :email, "What is your email address?" %>
            <%= c.email_field :email, class: "form-control" %>
          </div>
        <% end %>
        <%= f.submit class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "Home", root_path %> | <%= link_to "New Game", new_game_path %>
